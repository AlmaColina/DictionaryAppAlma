<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YellowColor" android:background="#A39BAA">

    <TextView
        android:text="Simon Says"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/titleText"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:id="@+id/scoreText"
        android:text="0"
        android:layout_marginTop="5dp"
        android:layout_below="@id/scoreTitle"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>
    <TextView
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:id="@+id/scoreTitle"
        android:text="Score:"
        android:layout_marginTop="50dp"
        android:layout_below="@id/redBtn"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/greenBtn"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#8BC34A"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <Button
        android:id="@+id/yellowBtn"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:textSize="40sp"
        android:layout_below="@id/greenBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFF00"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/blueBtn"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:textSize="40sp"
        android:layout_below="@id/yellowBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0000FF"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/redBtn"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_below="@id/blueBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF1200"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <Button
        android:id="@+id/restartBtn"
        android:text="Restart"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:textSize="40sp"
        android:layout_below="@id/yellowBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#6C0A7E"
        android:textColor="#FFFFFF"
        android:visibility="invisible"/>
</RelativeLayout>